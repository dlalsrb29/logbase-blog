{
  "name": "logbase-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:standalone": "next build && xcopy .next\\standalone\\* functions\\ /E /I /Y && xcopy .next\\static functions\\.next\\static /E /I /Y",
    "build:functions": "tsc --project functions/tsconfig.json",
    "start": "next start",
    "lint": "next lint",
    "deploy": "npm run build:functions && npm run build:standalone && firebase deploy --only functions,hosting"
  },
  "dependencies": {
    "firebase": "^12.0.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "express": "^4.18.0",
    "next": "15.4.3",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
